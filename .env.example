# Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=odpc_chatdb

# API Keys
GROQ_API_KEY=your_groq_api_key_here

# Crawl Control
# Set to "true", "1", "yes", or "skip" to skip crawling/indexing on startup
# Set to "false" or "0" to run crawling/indexing
SKIP_CRAWL=false

# Usage Examples:
# Development (fast startup, no crawling): SKIP_CRAWL=true
# Production (run once manually, then skip): SKIP_CRAWL=true
# First time setup (crawl and index): SKIP_CRAWL=false
